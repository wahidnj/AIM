<% 
    function formatDateTime(dateTimeString) {
        const dateTime = new Date(dateTimeString);
        const date = dateTime.toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' });
        const time = dateTime.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
        return `${date} ${time}`;
    } 

    function callDuration(started_at, ended_at) {
        const startedAt = new Date(started_at);
        const endedAt = new Date(ended_at);
        const durationInSeconds = (endedAt - startedAt) / 1000; // Convert milliseconds to seconds
        return formatDuration(durationInSeconds);
    } 

    // Function to format duration from seconds to hh:mm:ss
    function formatDuration(durationInSeconds) {
        const hours = Math.floor(durationInSeconds / 3600);
        const minutes = Math.floor((durationInSeconds % 3600) / 60);
        const seconds = Math.floor(durationInSeconds % 60);
        return `${padZero(hours)}:${padZero(minutes)}:${padZero(seconds)}`;
    }
  
    // Function to pad zero for single digit numbers
    function padZero(num) {
        return num.toString().padStart(2, '0');
    }
%>

<!doctype html>
<html lang="en" data-layout="twocolumn" data-sidebar="light" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>
    <%- include('layout/head',{
        title: 'AGENT LIST'}) %>
</head>

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        <%- include('layout/header') %>
        <!-- Vertical Overlay-->
        <div class="vertical-overlay"></div>

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0">Phone Number Details</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row row-cols-xxl-5 row-cols-lg-3 row-cols-md-2 row-cols-1">
                        <% if (numbers && numbers.length > 0) { %>
                            <% numbers.forEach(number => { %>
                                <div class="col">
                                    <div class="card">
                                        <a class="card-body bg-soft-success" data-bs-toggle="collapse" href="#leadDiscovered" role="button" aria-expanded="false" aria-controls="leadDiscovered">
                                            <h5 class="card-title text-uppercase fw-bold mb-1 fs-16"><%= number.phone %></h5>
                                            <p class="text-muted mb-0"> <span class="fw-medium text-uppercase"><%= number.name %></span></p>
                                        </a>
                                    </div>
                                    <!--end card-->
                                    <div class="collapse show" id="leadDiscovered">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-4">
                                                    <h5 class="card-title flex-grow-1">Call Logs</h5>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="table-responsive table-card">
                                                            <table class="table table-borderless align-middle mb-0">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th scope="col">Number</th>
                                                                        <th scope="col">Duration</th>
                                                                        <th scope="col">Amount</th>
                                                                        <th scope="col">Started At</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% if (callLogs && callLogs.length > 0) { %>
                                                                        <% callLogs.forEach(callLog => { %>
                                                                            <tr>
                                                                                <td>
                                                                                    <a href="/call-details/<%= callLog.id %>" class="fw-medium link-primary"><%= callLog.phone %></a>
                                                                                </td>
                                                                                <td>
                                                                                    <%= callDuration(callLog.started_at, callLog.ended_at) %>
                                                                                </td>
                                                                                <td>
                                                                                    <span class="text-success"><%= callLog.total_cost %></span>
                                                                                </td>
                                                                                <td>
                                                                                    <span class="badge badge-soft-success"><%= formatDateTime(callLog.started_at) %></span>
                                                                                </td>
                                                                            </tr>
                                                                        <% }); %>
                                                                    <% } %> 
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                        <!-- <div class="text-center mt-3">
                                                            <a href="javascript:void(0);" class="text-success "><i class="mdi mdi-loading mdi-spin fs-20 align-middle me-2"></i> Load more </a>
                                                        </div> -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end card-->
                                    </div>
                                </div>
                                <!--end col-->
                             <% }); %>
                        <% } %>
                    </div>
                    <!--end row-->

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            <%- include('layout/footer') %>
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    <!-- JAVASCRIPT -->
    <%- include('layout/script') %>

    <script>
        $(document).ready(function() {

        });
    </script>

</body>

</html>